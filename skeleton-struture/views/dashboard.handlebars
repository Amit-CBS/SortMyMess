<div class="container">
  Welcome {{name}} <br>
    <a href="/logout"><button type="submit" class="btn btn-danger">Logout</button></a>&nbsp;&nbsp;&nbsp;&nbsp;
    {{!-- <a href="/show/{{idUser}}" class="btn btn-success" id="edit">Edit Data</a> --}}
    {{#if success_msg}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{success_msg}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    {{/if}}
    <button id="myBtn" onclick="editmodal()">Add</button>
    <div class="col-sm-8">
        <table class="table">
            <thead>
                <tr>
                    <th>MessId</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th> 
                </tr>
            </thead>
            <tbody>
                {{#each memberUser}}
                    <tr>
                        <td>{{messid1}}</td>
                        <td>{{name}}</td>
                        <td>{{email}}</td>
                        <td>{{phone}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
<div id="edit" class="modal">
    <div class="modal-content">
        <span class="close2">&times;</span>
        <div class="container">
            <form action="/edit" method="POST">
                <div class="form-group">
                    <label for="Item Name">Item Name</label>
                    <input type="text" class="form-control" placeholder="Item Name" name="itemName">
                    <input type="hidden" name="idUser" value="{{idUser}}">
                </div>
                <div class="form-group">
                    <label for="Price">Price</label>
                    <input type="number" class="form-control"  placeholder="Price" name="price">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>